(ns basilisp.test.fixtures
  "Built-in fixtures which may be useful in Basilisp tests."
  (:import
   tempfile))

(def ^:dynamic *tempdir*
  "Name of a temporary directory value bound by the fixture `tempdir`."
  nil)

(defn tempdir
  "`basilisp.test` fixture which creates a temporary directory for the duration
  of the test.

  The temporary directory name is bound to the dynamic Var `*tempdir*`."
  []
  (with-open [d (tempfile/TemporaryDirectory)]
    (binding [*tempdir* d]
      (yield))))
